name: journal-distiller

services:
  - name: web
    dockerfile_path: Dockerfile
    github:
      repo: YOUR_GITHUB_USERNAME/eigenfield
      branch: master
      deploy_on_push: true
    instance_size_slug: basic-xxs
    instance_count: 1
    envs:
      - key: DATABASE_URL
        scope: RUN_TIME
        # Set manually in DO dashboard — use your managed Postgres connection string
      - key: LLM_MODE
        scope: RUN_TIME
        value: dry_run
    routes:
      - path: /

jobs:
  - name: migrate
    dockerfile_path: Dockerfile.migrate
    github:
      repo: YOUR_GITHUB_USERNAME/eigenfield
      branch: master
    instance_size_slug: basic-xxs
    kind: PRE_DEPLOY
    envs:
      - key: DATABASE_URL
        scope: RUN_TIME
        # Set manually in DO dashboard — must match the web service DATABASE_URL
    run_command: npx prisma migrate deploy
