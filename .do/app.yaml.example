name: journal-distiller

services:
  - name: web
    dockerfile_path: Dockerfile
    github:
      repo: YOUR_GITHUB_USERNAME/eigenfield
      branch: master
      deploy_on_push: true
    instance_size_slug: basic-xxs
    instance_count: 1
    envs:
      - key: DATABASE_URL
        scope: RUN_TIME
        value: ${db.DATABASE_URL}
      - key: LLM_MODE
        scope: RUN_TIME
        value: dry_run
    routes:
      - path: /

databases:
  - name: db
    engine: PG
    version: "16"
    size: db-s-dev-database
    num_nodes: 1

jobs:
  - name: migrate
    dockerfile_path: Dockerfile.migrate
    github:
      repo: YOUR_GITHUB_USERNAME/eigenfield
      branch: master
    instance_size_slug: basic-xxs
    kind: PRE_DEPLOY
    envs:
      - key: DATABASE_URL
        scope: RUN_TIME
        value: ${db.DATABASE_URL}
    run_command: npx prisma migrate deploy && npx prisma db seed
