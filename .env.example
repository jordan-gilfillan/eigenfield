# Database connection (required)
# Used by both Prisma and the application
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/journal_distill"

# OpenAI API key (required for real classification/summarization)
# OPENAI_API_KEY="sk-..."

# Anthropic API key (alternative to OpenAI)
# ANTHROPIC_API_KEY="sk-ant-..."

# LLM mode: "dry_run" (default) or "real"
# dry_run returns placeholder text without calling any API
# LLM_MODE="dry_run"

# Default LLM provider: "openai" or "anthropic" (optional)
# LLM_PROVIDER_DEFAULT="openai"

# Rate limiting: minimum delay between LLM API calls in milliseconds (default 250)
# LLM_MIN_DELAY_MS=250

# Spend caps (optional, recommended for real mode)
# LLM_MAX_USD_PER_RUN=5.00
# LLM_MAX_USD_PER_DAY=20.00
